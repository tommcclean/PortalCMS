@model Portal.CMS.Web.Areas.Admin.ViewModels.Users.DetailsViewModel
@{
    ViewBag.Title = string.Format("Edit User: {0} {1}", Model.GivenName, Model.FamilyName);
    ViewBag.Icon = "/Areas/Admin/Content/Images/icon-users.png";
    Layout = "";
}

@using (Html.BeginForm("Details", "Users", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(x => x.UserId)

    @Html.ValidationMessage("EmailAddress")

    <div class="control-group float-container">
        @Html.LabelFor(x => x.EmailAddress)
        @Html.TextBoxFor(x => x.EmailAddress, new { placeholder = "Email" })
    </div>

    @Html.ValidationMessage("GivenName")

    <div class="control-group float-container">
        @Html.LabelFor(x => x.GivenName)
        @Html.TextBoxFor(x => x.GivenName, new { placeholder = "Given Name" })
    </div>

    @Html.ValidationMessage("FamilyName")

    <div class="control-group float-container">
        @Html.LabelFor(x => x.FamilyName)
        @Html.TextBoxFor(x => x.FamilyName, new { placeholder = "Last Name" })
    </div>

    <div class="footer">
        <button class="btn primary">Save Changes</button>
        <button class="btn" data-dismiss="modal">Cancel</button>
    </div>
}