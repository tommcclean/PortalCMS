@model Portal.CMS.Web.Areas.Admin.ViewModels.Authentication.AccountViewModel
@{
    Layout = "";
}

<style>
    .control-group label
    {
        width: 155px;
    }

    .control-group input
    {
        width: calc(100% - 160px);
    }
</style>

@using (Html.BeginForm("Account", "Authentication", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <span class="field-validation-help">If you decide to change your email address, remember to use that to login in future!</span>

    @Html.ValidationMessage("EmailAddress")
    <div class="control-group float-container">
        @Html.LabelFor(x => x.EmailAddress)
        @Html.TextBoxFor(x => x.EmailAddress, new { placeholder = "Email Address" })
    </div>

    @Html.ValidationMessage("GivenName")
    <div class="control-group float-container">
        @Html.LabelFor(x => x.GivenName)
        @Html.TextBoxFor(x => x.GivenName, new { placeholder = "First Name" })
    </div>

    @Html.ValidationMessage("FamilyName")
    <div class="control-group float-container">
        @Html.LabelFor(x => x.FamilyName)
        @Html.TextBoxFor(x => x.FamilyName, new { placeholder = "Last Name" })
    </div>

    <div class="button-group float-container">
        <button class="btn primary">Update</button>
        <button class="btn" data-dismiss="modal">Cancel</button>
    </div>
}