@using Portal.CMS.Web.Areas.Admin.Helpers;

<div class="col-xs-12 col-md-6 col-lg-4">
    <div class="box">
        <div class="box-title">My Account</div>

        <div class="row" style="height: 150px; padding-top: 40px;">
            <div class="col-xs-5 vertical-alignment">
                <img class="avatar" src="@UserHelper.AvatarImagePath" />
            </div>
            <div class="col-xs-7 vertical-alignment" style="text-align: left;">
                <h3>@UserHelper.FullName</h3>
                <p>@UserHelper.EmailAddress</p>
            </div>
        </div>

        <div class="admin-container x3">
            <a href="@Url.Action("Avatar", "Authentication")" class="admin-item launch-modal" data-title="Change Avatar"><span class="fa fa-picture-o"></span>Avatar</a>
            <a href="@Url.Action("Details", "UserManager", new { userId = UserHelper.UserId })" class="admin-item launch-modal" data-title="Edit Details"><span class="fa fa-pencil"></span>Details</a>
            <a href="@Url.Action("Roles", "UserManager", new { userId = UserHelper.UserId })" class="admin-item launch-modal" data-title="Edit Roles"><span class="fa fa-building"></span>Roles</a>
        </div>
    </div>
</div>