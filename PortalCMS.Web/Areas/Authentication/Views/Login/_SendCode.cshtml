@model PortalCMS.Web.Areas.Authentication.ViewModel.Login.SendCodeViewModel
@{
	Layout = "";
}

@using (Html.BeginForm("SendCode", "Login", new { area = "Authentication", ReturnUrl = Model.ReturnUrl }, FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>Send verification code</h4>
    <hr />
		<div class="row">
			<div class="col-md-8">
				Select Two-Factor Authentication Provider:
				@Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
				<input type="submit" value="Submit" class="btn btn-default" />
			</div>
		</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
