@model PortalCMS.Web.Areas.Authentication.ViewModels.PasswordRecovery.ResetViewModel
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    label
    {
        color: black;
    }

    input
    {
        color: black;
    }
</style>

<section class="header background-parallax height-tall" style="background-image: url('/Areas/Authentication/Content/Images/reset-background-image.jpg');">
    <div class="overlay overlay-medium"></div>
    <div class="vertical-alignment component-container">
        <h1>Reset Password</h1>
        <br />

				<div class="container dark">
					@using (Html.BeginForm("Reset", "PasswordRecovery", FormMethod.Post, new { area = "Authentication" }))
					{
						@Html.AntiForgeryToken()
						@Html.HiddenFor(x => x.Token)
						@Html.HiddenFor(x => x.UserId)

						<div class="col-xs-12 col-sm-push-2 col-sm-8">
							@Html.ValidationMessage("Confirmation")
							@Html.ValidationMessage("Execution")

							@Html.ValidationMessage("Password")
							<div class="control-group">
								@Html.LabelFor(x => x.Password)
								@Html.PasswordFor(x => x.Password, new { placeholder = "Password" })
							</div>

							@Html.ValidationMessage("ConfirmPassword")
							<div class="control-group">
								@Html.LabelFor(x => x.ConfirmPassword)
								@Html.PasswordFor(x => x.ConfirmPassword, new { placeholder = "Confirm Password" })
							</div>

							<div class="button-group float-container">
								<button class="btn primary">Reset Password</button>
								<a href="~/" class="btn">Cancel</a>
							</div>
						</div>
					}
				</div>
    </div>
</section>